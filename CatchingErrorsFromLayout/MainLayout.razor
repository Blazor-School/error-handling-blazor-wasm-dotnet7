@inherits LayoutComponentBase

<main>
    <CascadingValue Value="MainErrorBoundary">
        <ErrorBoundary @ref="MainErrorBoundary">
            <ChildContent>
                @Body
            </ChildContent>
            <ErrorContent>
                <div>Hello Blazor School! This is a custom error message. <button class="btn btn-link" @onclick="_ => MainErrorBoundary.Recover()">Resolve Error</button></div>
            </ErrorContent>
        </ErrorBoundary>
    </CascadingValue>
</main>

@code {
    public ErrorBoundary MainErrorBoundary { get; set; } = default!;
}